<% include ../partials/headerAdmin %>
<div style="width: 30%; margin: 25px auto;">
    <form action="/admin/events/<%=event._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
        <div class="form-group">
            <label for="name">Title</label>
            <input class="form-control" type="text" name="title" id="title" placeholder="Enter Event title" value="<%= event.title %>" required>
        </div>
        <div class="form-group">
            <label for="name">Caption</label>
            <input class="form-control" type="text" name="caption" id="caption" placeholder="Enter a Caption" value="<%= event.caption %>" required>
        </div>
        <div class="form-group">
          <label for="image">Image (dont upload if you don't want to change picture)</label>
          <input class="form-control" type="file" id="image" name="image" accept="image/*">
        </div>
        <div class="form-group">
          <label for="imageurl">Image URL (default URL, leave this blank if you want to upload new image)</label>
          <input class="form-control" type="text" id="imageurl" name="imageurl" placeholder="leave this blank if you want to upload new image" value="<%= event.image %>">
        </div>
        <div class="form-group">
            <label for="content">Description</label>
            <textarea class="form-control" id="description" rows="8" name="description" placeholder="Enter a description" required><%= event.description %></textarea>
        </div>
        <div class="form-group">
            <label for="location">Date Start</label>
            <input class="form-control" type="date" name="dateStart" id="dateStart" required>
        </div>
        <div class="form-group">
            <label for="location">Date End</label>
            <input class="form-control" type="date" name="dateEnd" id="dateEnd" required>
        </div>
        <div class="form-check">
          <label class="form-check-label">
            <input type="checkbox" class="form-check-input" name="finished" value="<%= Boolean(event.finished) %>">
            Finished
          </label>
        </div>
        <div class="form-group">
            <label for="description">Photo URL(separate with comma,no space)</label>
            <input class="form-control" type="text" name="photos" id="photos" placeholder="enter description" value="<%= event.photos %>" required>
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
    </form>
    <a href="/admin/events">Go Back</a>
</div>
<% include ../partials/footerAdmin %>
